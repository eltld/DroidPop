<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    
    <dimen name="word_entry_editor_padding_left">8dp</dimen>
    <dimen name="light_translation_content_padding">8dp</dimen>
    
    <!-- Diameter of outer shape drawable shown in navbar search-->
    <dimen name="navbar_lock_outerring_diameter">340dp</dimen>

    <!-- Diameter of outer shape drawable shown in navbar search. Should be 1/2 of above value -->
    <dimen name="navbar_lock_outerring_radius">170dp</dimen>

    <!-- Default glow radius for GlowPadView -->
    <dimen name="glowpadview_glow_radius">75dip</dimen>

    <!-- Default distance beyond which GlowPadView snaps to the matching target -->
    <dimen name="glowpadview_snap_margin">40dip</dimen>

    <!-- Default distance from each snap target that GlowPadView considers a "hit" -->
    <dimen name="glowpadview_inner_radius">15dip</dimen>

    <dimen name="glowpadview_margin_bottom">-64dip</dimen>
    <dimen name="glowpadview_margin_right">0dip</dimen>
    
    <!-- SlidingDrawer -->
    <dimen name="sliding_drawer_outter_height">768dp</dimen>
    <dimen name="sliding_drawer_outter_width">512dp</dimen>
    <dimen name="horizontal_handle_width">128dp</dimen>
    <dimen name="horizontal_handle_height">64dp</dimen>
    <dimen name="vertical_handle_width">@dimen/horizontal_handle_height</dimen>
    <dimen name="vertical_handle_height">@dimen/horizontal_handle_width</dimen>
    <dimen name="expanded_offset">64dp</dimen>
    <dimen name="collapsed_offset">32dp</dimen>
    
</resources>
