<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/paraphrase_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/word_category_padding"
        android:textColor="@color/taupe"
        android:textSize="@dimen/word_category_text_size"
        android:textStyle="bold" />

    <com.droidpop.view.ParaphraseListView
        android:id="@+id/paraphrase_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:groupIndicator="@null" />

</LinearLayout>