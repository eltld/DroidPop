<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instant_translation_nav"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bule_light"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/word_entry_editor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:hint="@string/word_entry"
        android:inputType="none"
        android:lines="1"
        android:paddingLeft="@dimen/word_entry_editor_padding_left"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_light" />

    <ImageButton
        android:id="@+id/nav_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/close"
        android:src="@drawable/navigation_cancel" />

</LinearLayout>