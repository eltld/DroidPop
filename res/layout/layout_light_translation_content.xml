<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="@dimen/light_translation_content_padding" >

    <ViewStub
        android:id="@+id/no_translation_stub"
        layout="@layout/layout_no_translation"
        android:inflatedId="@+id/no_translation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <ViewStub
        android:id="@+id/no_internet_connection_stub"
        layout="@layout/layout_no_internet_connection"
        android:inflatedId="@+id/no_internet_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/light_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

</FrameLayout>