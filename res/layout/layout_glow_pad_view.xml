<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:droidpop="http://schemas.android.com/apk/res/com.droidpop"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <me.wtao.widget.GlowPadView
        android:id="@+id/glow_pad_view"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:translationY="240dp"
        
        droidpop:alwaysTrackFinger="true"
        droidpop:directionDescriptions="@array/lock_direction_descriptions"
        droidpop:feedbackCount="@integer/config_feedback_count"
        droidpop:glowRadius="@dimen/glowpadview_glow_radius"
        droidpop:innerRadius="@dimen/glowpadview_inner_radius"
        droidpop:outerRadius="@dimen/navbar_lock_outerring_radius"
        droidpop:outerRingDrawable="@drawable/ic_word_cap_lock_outerring"
        droidpop:pointDrawable="@drawable/ic_word_cap_glowdot"
        droidpop:snapMargin="@dimen/glowpadview_snap_margin"
        droidpop:targetDescriptions="@array/lock_descriptions"
        droidpop:targetDrawables="@array/lock_drawables"
        droidpop:vibrationDuration="@integer/config_vibration_duration" />

</RelativeLayout>